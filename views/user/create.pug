extends ../layout/common.pug
block content
  
  h1.display-4.text-center Create Account Coders-X
  p.text-center.font-weght-light Free Education
  form(action="/user/create" method="POST")
    .form-group
      label(for='name') Name
      input#name.form-control(type='text' name='name' value= name ? name : '')
    .form-group
      label(for='email') Email address
      input#email.form-control(type='email' name='email' value= email ? email : '')
    .form-group
      label(for='password') Password
      input#password.form-control(type='password' name='password' value='123123')
      small.text-form.text-mute Default PassWord: 
        b "123123"
    button.btn.btn-primary(type='submit') Create
  if errors 
    each error in errors
      .alert.alert-danger=error
